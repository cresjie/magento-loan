<config>

	<modules>
		<S900_Loan>
			<version>1.0.6.4</version>
		</S900_Loan>
	</modules>


	<global>

		<helpers>
			<loan>
				<class>S900_Loan_Helper</class>
			</loan>
		</helpers>

		<models>
			<loan>
				<class>S900_Loan_Model</class>
				<resourceModel>loan_resource</resourceModel>
			</loan>
			<loan_resource>
				<class>S900_Loan_Model_Resource</class>
				<entities>
					<loan>
						<table>loan_loan</table>
					</loan>
					<status_attr>
						<table>loan_status_attr</table>
					</status_attr>
					<account>
						<table>loan_account</table>
					</account>
					<income>
						<table>loan_income</table>
					</income>
					<reason>
						<table>loan_reason</table>
					</reason>
				</entities>
			</loan_resource>
		</models>

		<blocks>
			<loan>
				<class>S900_Loan_Block</class>
			</loan>
			<adminhtml>
				<rewrite>
					<page_head>S900_Loan_Block_Html_Head</page_head>
				</rewrite>
			</adminhtml>
		</blocks>

		<resources>
			<loan_setup>
				<setup>
					<module>S900_Loan</module>
				</setup>
				<connection>
					<use>core_setup</use>
				</connection>
			</loan_setup>

			<loan_read>
				<connection>
					<use>core_read</use>
				</connection>
			</loan_read>
			<loan_write>
				<connection>
					<use>core_write</use>
				</connection>
			</loan_write>
		</resources>
	</global>



	<admin>
		<routers>
			<adminhtml>
				<use>admin</use>
				<args>
					<modules>
						<loan after="Mage_Adminhtml">S900_Loan_Adminhtml</loan>
					</modules>
				</args>
			</adminhtml>
		</routers>
	</admin>

	<frontend>
		<routers>
			<loan>
				<use>standard</use>
				<args>
					<module>S900_Loan</module>
					<frontName>loan</frontName>
				</args>
			</loan>
		</routers>
	</frontend>

	<adminhtml>
		<layout>
			<updates>
				<s900_loan>
					<file>s900_loan.xml</file>
				</s900_loan>
			</updates>
		</layout>

	</adminhtml>

	<frontend>
		<layout>
			<updates>
				<s900_loan>
					<file>s900_loan.xml</file>
				</s900_loan>
			</updates>
		</layout>
	</frontend>

</config>